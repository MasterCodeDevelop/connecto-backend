# === Server Configuration ===
PROTOCOL=http
PORT=3000
NODE_ENV=development
HOST=localhost

# === Database Configuration ===
# MongoDB (Mongoose)
DB_URI=mongodb://localhost:27017
DB_PORT=27017
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=connecto

# Prisma (PostgreSQL / MySQL / SQLite / PlanetScale...)
DATABASE_URL=postgresql://user:password@localhost:5432/connecto?schema=public

# === Authentication ===
JWT_SECRET=your_jwt_secret
JWT_EXPIRES_IN=24h

# === CORS ===
CORS_ORIGINS=*

# === File Uploads (Multer) ===
UPLOADS_BASE_PATH=private/uploads

# === Debugging / Logs ===
LOG_LEVEL=debug